<h1> Updating an Article </h1>

<% if @article.errors.any? %>
<h2> The Following errors are preventing the form from being saved </h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
</ul>
<% end %>

</ul>

<%= form_with scope: :articles, url: articles_path, local: true do | f | %>

<p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %> <br/>
</p>

<% end %> 